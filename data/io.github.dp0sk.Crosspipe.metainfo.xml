<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.dp0sk.Crosspipe</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-only</project_license>
  
  <name>Crosspipe</name>
  <summary>Route audio and video streams</summary>
  
  <description>
    <p>
      Crosspipe is a graph-based PipeWire manager for GNOME, built with Vala and love.
    </p>
    <p>Features:</p>
    <ul>
      <li>Visual graph of all PipeWire connections</li>
      <li>Drag-and-drop connection management</li>
      <li>Modern GTK4/Libadwaita interface</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">io.github.dp0sk.Crosspipe.desktop</launchable>
  
  <screenshots>
    <screenshot type="default">
      <caption>Light style</caption>
      <image>https://raw.githubusercontent.com/dp0sk/Crosspipe/refs/heads/main/data/screenshot-light.png</image>
    </screenshot>
    <screenshot type="default">
      <caption>Dark style</caption>
      <image>https://raw.githubusercontent.com/dp0sk/Crosspipe/refs/heads/main/data/screenshot-dark.png</image>
    </screenshot>
  </screenshots>

  <branding>
    <color type="primary" scheme_preference="light">#d4cff6</color>
    <color type="primary" scheme_preference="dark">#322d56</color>
  </branding>
  
  <url type="homepage">https://github.com/dp0sk/crosspipe</url>
  <url type="bugtracker">https://github.com/dp0sk/crosspipe/issues</url>
  <url type="vcs-browser">https://github.com/dp0sk/crosspipe</url>
  
  <developer id="io.github.dp0sk">
    <name>dp0sk</name>
  </developer>
  
